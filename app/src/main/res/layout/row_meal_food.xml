<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_marginRight="@dimen/v_size"
    android:layout_marginVertical="@dimen/v_size"
    app:cardCornerRadius="@dimen/i_size"
    app:cardElevation="@dimen/v_size">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ir.selfino.android.View.CCheckBox
        android:id="@+id/cb_select_food_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fxi_size"
        android:checked="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="کشک زابل"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_hint"
        android:layout_marginHorizontal="@dimen/xv_size"/>
    <ir.selfino.android.View.CTextView
        android:id="@+id/txt_name_food_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="@dimen/fxi_size"
        tools:text="۱۵۰۰ تومان"/>
</LinearLayout>
</android.support.v7.widget.CardView>