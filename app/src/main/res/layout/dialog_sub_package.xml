<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/v_size"
    android:layout_marginVertical="@dimen/v_size"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    app:cardCornerRadius="@dimen/i_size"
    app:cardElevation="@dimen/v_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_sub_package_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_sub_package_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_size"/>

            <ir.selfino.android.View.CButton
                android:id="@+id/btn_pay_sub_package_dialog"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/x_size"
                android:background="@drawable/selector_btn_pink"
                android:text="پرداخت"
                android:textColor="@color/text_white"
                android:textSize="@dimen/fxv_size"
                android:textStyle="bold"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbr_sub_package_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/x_size"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>