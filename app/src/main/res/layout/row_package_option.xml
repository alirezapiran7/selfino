<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="@dimen/i_size"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_gravity="center_horizontal"
    android:paddingTop="@dimen/i_size"
    app:cardCornerRadius="@dimen/i_size"
    app:cardElevation="@dimen/i_size">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ir.selfino.android.View.CTextView
        android:id="@+id/txt_option_name_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fxi_size"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_hint"
        tools:text="option1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum=".9">
        <ImageView
            android:id="@+id/img_free_package_row"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_save_128"
            tools:tint="@color/greenBlue"/>
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_marginVertical="2dp"
            android:background="@color/text_hint"/>
        <ImageView
            android:id="@+id/img_silver_package_row"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_save_128"
            tools:tint="@color/greenBlue"/>
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_marginVertical="2dp"
            android:background="@color/text_hint"/>
        <ImageView
            android:id="@+id/img_gold_package_row"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_save_128"
            tools:tint="@color/greenBlue"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>