<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_row_item"/>
            <stroke android:color="@color/greenBlue" android:width="3dp"/>
            <corners android:radius="@dimen/v_size"/>
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/background_row_item"/>
            <corners android:radius="@dimen/x_size"/>
        </shape>
    </item>

</selector>