<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <!--<item name="colorPrimary">@color/background_activity</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#a02037</item>
        <item name="colorControlNormal">@color/text_black</item>
        <item name="colorControlActivated">@color/text_black</item>
    </style>


    <style name="switchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/text_black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="elevation">@dimen/dimen_10dp</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>
    <style name="RadioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/text_black</item>
        <item name="colorAccent">#a02037</item>
        <item name="elevation">@dimen/dimen_10dp</item>

        <item name="tabIndicatorColor">#a02037</item>
    </style>
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/text_black</item>
        <item name="colorAccent">#a02037</item>
        <item name="elevation">@dimen/dimen_10dp</item>

        <item name="tabIndicatorColor">#a02037</item>
    </style>

    <style name="FloatAction" parent="Widget.Design.FloatingActionButton">
        <!-- Hint color and label color in FALSE state -->
        <item name="colorAccent">@color/greenBlue</item>
        <!--<item name="colorControlNormal">@color/navigationItem_selected</item>-->
        <!--<item name="colorControlActivated">@color/navigationItem_selected</item>-->
        <!--<item name="tabSelectedTextColor">@color/navigationItem_selected</item>-->
        <item name="elevation">@dimen/dimen_10dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="colorAccent">@color/text_white</item>
        <item name="elevation">@dimen/dimen_10dp</item>
        <item name="tabIndicatorColor">@color/text_white</item>
        <item name="tabSelectedTextColor">@color/text_white</item>
        <item name="android:textSize">@dimen/fxi_size</item>
        <item name="android:textStyle">bold</item>
        <!---->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <declare-styleable name="ArcProgress">
        <attr name="arc_progress" format="integer"/>
        <attr name="arc_angle" format="float"/>
        <attr name="arc_stroke_width" format="dimension"/>
        <attr name="arc_max" format="integer"/>
        <attr name="arc_unfinished_color" format="color"/>
        <attr name="arc_finished_color" format="color"/>
        <attr name="arc_text_size" format="dimension"/>
        <attr name="arc_text_color" format="color"/>
        <attr name="arc_suffix_text" format="string"/>
        <attr name="arc_suffix_text_size" format="dimension"/>
        <attr name="arc_suffix_text_padding" format="dimension"/>
        <attr name="arc_bottom_text" format="string"/>
        <attr name="arc_bottom_text_size" format="dimension"/>
    </declare-styleable>

</resources>
